# -*- mode: ruby -*-

create_table "servents", force: true do |t|
  t.string "name", default: ""
  t.string "desc", default: ""
  t.string "hostname"
  t.integer "port"
  t.string "auth_id"
  t.string "passwd"
  t.integer "priority"
  t.integer "max_channels", default: 0
  t.boolean "enabled", default: false
  t.string "agent"
  t.string "yellow_pages", default: ""
end

create_table "channels", force: true do |t|
  t.string  "gnu_id"
  t.belongs_to :user, index: true
  t.belongs_to :servent, index: true
  t.boolean "hide_screenshots", default: false
  t.datetime "last_active_at"
  t.datetime "created_at"
  t.string "push_uri"
  t.string "stream_key"
end

create_table "users", force: true do |t|
  t.string  "name"
  t.string  "image"
  t.integer "twitter_id", limit: 8
  t.boolean "admin",      default: false
  t.boolean "suspended",  default: false
  t.datetime "notice_checked_at"
  t.datetime "logged_on_at"
  t.text "bio"
end

create_table "channel_infos", force: true do |t|
  t.references :user, index: true
  t.string  "channel"
  t.string  "genre"
  t.string  "desc"
  t.string  "comment"
  t.string  "url"
  t.string  "stream_type"
  t.string  "yp"
  t.timestamps
  t.references :channel, index: true
  t.datetime "terminated_at"
  t.integer "primary_screen_shot_id", default: nil
  t.boolean "hide_screenshots", default: false
  t.string  "source_name"
end

create_table "screen_shots", force: true do |t|
  t.belongs_to :channel_info, index: true
  t.string "filename"
  t.datetime "created_at"
end

create_table "notices", force: true do |t|
  t.text :body
  t.string :title
  t.timestamps
end

create_table "sources", force: true do |t|
  t.belongs_to :user, index: true
  t.string :name
  t.string :key
end

create_table "passwords", force: true do |t|
  t.belongs_to :user, index: true
  t.string :sha256sum
  t.string :salt, default: ""
end
