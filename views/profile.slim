- content_for :title do
  = user.name

.panel.panel-default
  == slim :profile_panel_content, locals: { user: user }

  .panel-body
    = user.bio

  - if user.channels.any?
    == slim :profile_onair, locals: { user: user }

== slim :my_history, locals: { recent_programs: recent_programs }

a.btn.btn-default href="/programs?user=#{user.id}" もっと見る&thinsp;&raquo;
