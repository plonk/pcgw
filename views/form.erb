<p style="color: red"><%= h @message %></p>

<form action="/broadcast" method="POST" role="form">

  <div class="form-group">
    <label for=channel>チャンネル名</label>
    <input class="form-control" type=text name=channel required
           value="<%= @user.name %>">
  </div>

  <div class="form-group">
    <label for=genre>ジャンル</label>
    <input class="form-control" type=text name=genre   required
           value="<%= h params['genre'] || cookies['genre'] %>">
  </div>

  <div class="form-group">
    <label for=desc>詳細</label>
    <input class="form-control" type=text name=desc  required
           value="<%= h params['desc'] || cookies['desc'] %>">
  </div>

  <div class="form-group">
    <label for=comment>コメント</label>
    <input class="form-control" type=text name=comment
           value="<%= h params['comment'] || cookies['comment'] %>">
  </div>

  <div class="form-group">
    <label for="url">コンタクト&thinsp;URL</label>
    <input class="form-control" name="url" type=url value="<%= h params['url'] || cookies['url'] %>">
  </div>

  <div class="form-group">
    <label for=yp>掲載YP</label>
    <% @yps.each do |yp| %>
      <div class="radio">
        <label>
          <input type="radio" name="yp" value="<%= yp.yellowPageId %>"
                 <%= cookies['yp'].to_i == yp.yellowPageId ? "checked" : "" %>>
          <%= h yp.name %>
        </label>
      </div>
    <% end %>
  </div>

  <button type="submit" class="btn btn-primary">開始</button>
</form>
