<% content_for :title do %>利用者一覧<% end %>

<h1>利用者一覧</h1>

<p><%=h @users.size %>&thinsp;人</p>

<table class="table">
  <tr> <th>ID</th> <th>ユーザー名</th> <th>最終ログオン</th> <th>備考</th> </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= h user.id %></td>
      <td>
        <img width="24" src="<%= h user.image_https %>"
             alt="<%= h user.name %>"
             class="img-rounded">
        <a href="/users/<%= h user.id %>">
          <%= h user.name %>
        </a>
      </td>
      <td>
        <%= user.logged_on_at ? user.logged_on_at.localtime.strftime('%Y/%m/%d %H:%M') : 'n/a' %>
      </td>
      <td>
        <%= user_status_raw(user) %>
      </td>
    </tr>
  <% end %>
</table>
