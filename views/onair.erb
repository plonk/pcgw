<!-- max_channels: Integer -->
<h2 style="padding-left: 1.4em; text-indent: -1.4em">
  <span style="color: #ffa922; font-weight: bold; font-size: 200%"><%= @channels.size %></span> / <%= max_channels %> <%= jp_words 'チャンネルが配信中' %>
</h2>

<div class="panel panel-default">
  <table class="table">
    <tr>
      <th>チャンネル</th>
      <th class="hidden-xs">配信者</th>
      <th>内容</th>
      <th>リスナー</th>
      <th class="hidden-xs">配信時間</th>
      <th>YP</th>
    </tr>
    <% @channels.each do |ch| %>
    <tr>
      <td>
        <div style="display: inline-block; text-align: center; width: 50px; margin-right: 0.8em">
          <img class="img-rounded" height="28" src="/channels/<%= h ch.id %>/screenshot">
        </div>
        <a href="/channels/<%= h ch.id %>/play">
          <%= h ch.channel_info.channel %>
        </a>
      </td>
      <td class="hidden-xs">
        <a href="/profile/<%= ch.user.id %>">
          <img width="28" src="<%= ch.user.image %>" alt="<%= ch.user.name %>" class="img-rounded" style="margin-right: 0.8em">
          <%= h ch.user.name %>
        </a>
      </td>
      <td>
        <a href="<%= h ch.channel_info.url %>">
          <%= h ch.channel_info.summary %>
        </a>
      </td>
      <td><%= h ch.listener_count_display %></td>
      <td class="hidden-xs"><%= h IndexTxt.uptime_fmt(ch.status['uptime']) %></td>
      <td><%= slim :yellow_page_links, locals: { yp_names: ch.info['yellowPages'].map { |y| y['name'] } } %></td>
    </tr>
    <% end %>
  </table>
</div>
