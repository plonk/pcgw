<% if @channels.any? %>
  <h2>
    <span style="color: #ffa922; font-weight: bold; font-size: 200%"><%= @channels.size %></span><%= jp_words 'チャンネルが配信中！' %>
  </h2>

  <table class=table>
    <tr>
      <th>チャンネル名</th>
      <th>リスナー数</th>
      <th>掲載&thinsp;YP</th>
    </tr>
    <% @channels.each do |ch| %>
    <tr>
      <td><%= h ch.info['info']['name'] %></td>
      <td><%= h ch.status['totalDirects'] %></td>
      <td><%= yellow_page_links(ch.info['yellowPages']) %></td>
    </tr>
    <% end %>
  </table>
<% end %>
