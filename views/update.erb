<% if @error %>
// 選択できなくなるのでソースURLは更新しない
  $('#connection').html("n/a")
  $('#relay').html("n/a")
  $('#direct').html("n/a")
  $('#bitrate').html("n/a")
  $('#uptime').html("n/a")
  $('#status').html("n/a")
  $('#contact').html("n/a")
  $('#contact').attr("href", "")
  $('#genre').html("n/a")
  $('#desc').html("n/a")
  $('#comment').html("n/a")
  $('#error').html("<%= @error %>")
<% else %>
  $('#connection').html("<%= @connection %>")
  $('#relay').html("<%= @status['totalRelays'] %>")
  $('#direct').html("<%= @status['totalDirects'] %>")
  $('#bitrate').html("<%= @source_kbps %>Kbps / <%= @info['info']['bitrate'] %>")
  $('#uptime').html("<%= @status['uptime'] %>")
  $('#status').html("<%= @status['status'] %>").removeClass().addClass("<%= @status_class %>")
  $('#contact').html("<%= @info['info']['url'] %>")
  $('#contact').attr("href", "<%= @info['info']['url'] %>")
  $('#genre').html("<%= @info['info']['genre'] %>")
  $('#comment').html("<%= @info['info']['comment'] %>")
  $('#desc').html("<%= @info['info']['desc'] %>")
  $('#error').html("")
<% end %>


