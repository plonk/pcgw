<% if @error %>
// 選択できなくなるのでソースURLは更新しない
  $('#connections').text('n/a')
  $('#relay').text('n/a')
  $('#direct').text('n/a')
  $('#bitrate').text('n/a')
  $('#uptime').text('n/a')
  $('#status').text('n/a')
  $('#contact').text('n/a')
  $('#contact').attr('href', '')
  $('#genre').text('n/a')
  $('#desc').text('n/a')
  $('#comment').text('n/a')
  $('#error').text(<%= javascript_string  @error %>)
<% else %>
  $('#connections').html(<%= javascript_string @connections %>)
  $('#relay').text(<%= javascript_string  @status['totalRelays'] %>)
  $('#direct').text(<%= javascript_string  @status['totalDirects'] %>)
  $('#bitrate').text(<%= javascript_string  @source_kbps %>Kbps / <%= @info['info']['bitrate'] %>)
  $('#uptime').text(<%= javascript_string  TimeUtil.render_duration @status['uptime'] %>)
  $('#status').text(<%= javascript_string  @status['status'] %>).removeClass().addClass(<%= javascript_string  @status_class %>)
  $('#contact').text(<%= javascript_string  @info['info']['url'] %>)
  $('#contact').attr('href', <%= javascript_string  @info['info']['url'] %>)
  $('#genre').text(<%= javascript_string  @info['info']['genre'] %>)
  $('#comment').text(<%= javascript_string  @info['info']['comment'] %>)
  $('#desc').text(<%= javascript_string  @info['info']['desc'] %>)
  $('#error').text('')
<% end %>


