<% if @error %>
// 選択できなくなるのでソースURLは更新しない
  $('#connections').text("n/a")
  $('#relay').text("n/a")
  $('#direct').text("n/a")
  $('#bitrate').text("n/a")
  $('#uptime').text("n/a")
  $('#status').text("n/a")
  $('#contact').text("n/a")
  $('#contact').attr("href", "")
  $('#genre').text("n/a")
  $('#desc').text("n/a")
  $('#comment').text("n/a")
  $('#error').text("<%= @error %>")
<% else %>
  $('#connections').html(<%= javascript_string @connections %>)
  $('#relay').text("<%= @status['totalRelays'] %>")
  $('#direct').text("<%= @status['totalDirects'] %>")
  $('#bitrate').text("<%= @source_kbps %>Kbps / <%= @info['info']['bitrate'] %>")
  $('#uptime').text("<%= @status['uptime'] %>")
  $('#status').text("<%= @status['status'] %>").removeClass().addClass("<%= @status_class %>")
  $('#contact').text("<%= @info['info']['url'] %>")
  $('#contact').attr("href", "<%= @info['info']['url'] %>")
  $('#genre').text("<%= @info['info']['genre'] %>")
  $('#comment').text("<%= @info['info']['comment'] %>")
  $('#desc').text("<%= @info['info']['desc'] %>")
  $('#error').text("")
<% end %>


