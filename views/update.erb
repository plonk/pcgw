<% if @error %>
// 選択できなくなるのでソースURLは更新しない
  $('#connections').text("n/a")
  $('#relay').text("n/a")
  $('#direct').text("n/a")
  $('#bitrate').text("n/a")
  $('#source_rate').text("n/a")
  $('#bitrate_meter').attr("value", 0.1)
  $('#uptime').text("n/a")
  $('#status').text("n/a")
  $('#error').text("<%= @error %>")
<% else %>
  $('#connections').html(<%= javascript_string @connections %>)
  $('#relay').text("<%= @status['totalRelays'] %>")
  $('#direct').text("<%= @status['totalDirects'] %>")
  $('#bitrate').text("<%= @info['info']['bitrate'] %>")
  $('#source_rate').text("<%= @source_kbps %>")
  $('#bitrate_meter').attr('value', <%= "%.2f" % @bitrate_meter %>)
  $('#uptime').text("<%= TimeUtil.render_duration @status['uptime'] %>")
  $('#status').text("<%= @status['status'] %>").removeClass().addClass("<%= @status_class %>")
  $('#error').text("")
<% end %>


