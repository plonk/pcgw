<!doctype html>
<html lang=ja>
  <head>
    <title>Peercast Gateway</title>
    <%= erb :common_head %>
  </head>
  <body>
    <%= erb :navbar %>

    <div class=container>

      <p class="text-success"><%= @success_message %></p>

      <form action="/account" method="POST" role="form">

        <div class="form-group">
          <label for=name>ユーザー名</label>
          <input class="form-control" type=text name=name required
                 value="<%= h @user.name %>">
        </div>

        <div class="form-group">
          <label for=image>画像</label>
          <input class="form-control" type=url name=image required
                 value="<%= h @user.image %>">
        </div>

        <button type="submit" class="btn btn-primary">変更を保存</button>
      </form>

    </div>

    <%= erb :footer %>
  </body>
</html>
