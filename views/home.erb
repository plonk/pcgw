<!doctype html>
<html lang=ja>
  <head>
    <title>Peercast Gateway &mdash; ホーム</title>
    <%= erb :common_head %>
  </head>

  <body>

    <%= erb :navbar %>

    <div class=container>
      <h2><%= jp_words @user.name + "のチャンネル" %></h2>

      <% if @channels.any? %>
        <table class="table">
          <tr><th>チャンネル名</th><th></th></tr>
          <% @channels.each do |ch| %>
          <tr>
            <td><%= ch.info['info']['name'] %></td>
            <td><a href="/channels/<%= ch.gnu_id %>" class="btn btn-default btn-xs" style="vertical-align: baseline">詳細</a></td>
          </tr>
          <% end %>
        </table>
        <form action="/stopall" method="POST" role="form">
          <% @channels.each do |ch| %>
          <input type=hidden name="channel_ids[]" value="<%= ch.gnu_id %>">
          <% end %>
          <button class="btn btn-warning">全て停止する</button>
        </form>
      <% else %>
        <p>１つもありません。</p>
        <p>
          <a href="/create" class="btn btn-primary"><img src="/images/megaphone.png" width="32"> 配信する</a>
          <a href="/how-to" class="btn btn-default" style="margin-left: 1em; ">手順 &raquo;</a>
        </p>
      <% end %>


      <%= erb :onair %>
    </div>

    <%= erb :footer %>
  </body>
</html>
