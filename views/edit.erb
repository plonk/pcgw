<script src="/bbs_checker.js"></script>

<form class="form-horizontal panel" action="/channels/<%= @channel_id %>" method="POST" role="form">
  <%= slim :authenticity_token %>
  <div class="form-group row">
    <label class="col-sm-3" for=name>チャンネル名</label>
    <div class="col-sm-9">
      <input class="form-control" type=text name="name" value="<%= h @info['name'] %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3" for=genre>ジャンル</label>
    <div class="col-sm-9">
      <input class="form-control" type=text name="genre" value="<%= h @info['genre'] %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3" for=desc>詳細</label>
    <div class="col-sm-9">
      <input class="form-control" type=text name="desc" value="<%= h @info['desc'] %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3" for=comment>コメント</label>
    <div class="col-sm-9">
      <input class="form-control" type=text name="comment" value="<%= h @info['comment'] %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3" for=url>コンタクトURL</label>
    <div class="col-sm-9">
      <input class="form-control" id="bbs-checker-input" type=text name="url" value="<%= h @info['url'] %>">
      <span id="bbs-checker-indicator"></span>
    </div>
  </div>

  <button type=submit class="btn btn-primary btn-block">変更を保存</button>

</form>
